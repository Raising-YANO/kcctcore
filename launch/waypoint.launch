<launch>
    <arg name="sim" default="false" />
    <arg name="show_gui" default="true"/>
    <arg name="map_2d" default="false" />


    <group if="$(arg sim)">
        <include file="$(find kcctsim)/launch/sim.launch">
            <arg name="gui" default="$(arg show_gui)"/>
            <arg name="world_name" default="$(find kcctsim)/worlds/autoware.world"/>
        </include>
        <include file="$(find kcctcore)/launch/sensorsim.launch"/>
    </group>
    <group unless="$(arg sim)">
        <include file="$(find kcctcore)/launch/sensor.launch"/>
    </group>

    <group if="$(arg map_2d)">
        <include file="$(find kcctcore)/launch/amcl.launch"/>
        <node pkg="rviz" type="rviz" name="rviz" args="-d $(find kcctcore)/config/rviz/waypoint2d.rviz" />
    </group>
    <group unless="$(arg map_2d)">
        
    </group>

    <node name="initial3d" pkg="kcctplugin" type="3d_initial_pose" output="screen" respawn="true"/>
    <include file="$(find waypoint_tools)/launch/waypoint_record.launch"/>
    
</launch>